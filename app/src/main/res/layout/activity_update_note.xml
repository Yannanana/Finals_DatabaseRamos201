<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateNoteActivity"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/TV_editNoteHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/bebas_neue"
        android:text="Edit Note"
        android:textColor="@color/myColor"
        android:textSize="24sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/IV_updateButton"
        android:src="@drawable/baseline_check_circle_24"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/TV_editNoteHeading"
        android:layout_marginEnd="6dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/ET_updateTitle"
        android:hint="Enter Title"
        android:padding="12dp"
        android:textSize="20sp"
        android:layout_below="@+id/TV_editNoteHeading"
        android:background="@drawable/mycolor_border"
        android:layout_marginTop="16dp"
        android:maxLines="1"
        android:fontFamily="@font/bebas_neue" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ET_updateContent"
        android:hint="enter the description"
        android:gravity="top"
        android:padding="12dp"
        android:textSize="18sp"
        android:background="@drawable/mycolor_border"
        android:layout_below="@id/ET_updateTitle"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/bebas_neue" />



</RelativeLayout>